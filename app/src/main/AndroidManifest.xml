<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="br.com.backapp.gecko">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher" >

        <activity
            android:name="br.com.backapp.gecko.ui.activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="br.com.backapp.gecko.ui.activities.SignupActivity"
            android:label="@string/signup"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name="br.com.backapp.gecko.ui.activities.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="br.com.backapp.gecko.ui.activities.GameListActivity"
            android:theme="@style/AppTheme">
        </activity>

    </application>

</manifest>
